
<p>物件名:<%= @property.name %></p>
<p>賃料:<%= @property.price %>円</p>
<p>住所:<%= @property.address %></p>
<p>築年数:<%= @property.age %>年</p>
<p>備考:<%= @property.remarks %></p>

<% @stations.each do |station| %>
  <h2>最寄り駅<%= station.id %></h2>
  <p>路線名:<%= station.root_name %></p>
  <p>駅名:<%= station.station_name %></p>
  <p>徒歩分数:<%= station.time %>分</p>
<% end %>

<p><%= link_to '戻る', properties_path %>|<%= link_to '編集', edit_property_path(@property) %></p>
